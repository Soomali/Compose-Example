<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/storyLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"

    android:theme="@style/Theme.WhatsAppClone.ContactTheme"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <com.devlomi.circularstatusview.CircularStatusView
                android:id="@+id/storyStatusView"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:src="@mipmap/ben_foreground"
                app:portion_spacing="4dp"
                app:portion_width="4dp"

                app:portions_count="5" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/storyImageView"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_alignStart="@+id/storyStatusView"
                android:layout_alignLeft="@+id/storyStatusView"
                android:layout_alignTop="@+id/storyStatusView"
                android:layout_alignEnd="@+id/storyStatusView"
                android:layout_alignRight="@+id/storyStatusView"
                android:layout_alignBottom="@+id/storyStatusView"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="#00000000"
                android:padding="0dp"
                android:src="@mipmap/ben"
                app:civ_border_width="0dp"
                app:srcCompat="@mipmap/ben" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storyNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/StoryDateView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>