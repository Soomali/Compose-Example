<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DialogApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DialogApp.NoActionBarDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle"> true</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnSecondary">@color/teal_200</item>
    </style>

    <style name="Theme.DialogApp.InputStyle">
        <item name="hintTextColor">#AAAAAA</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:max">255</item>
    </style>

    <style name="Theme.DialogApp.DialogDividerStyle">
        <item name="background">@color/white</item>
    </style>
    <style name="Theme.DialogApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle"> true</item>
    </style>

    <style name="Theme.DialogApp.CommentSend">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foregroundTint">@color/teal_200</item>
        <item name="colorPrimary">@color/teal_200</item>

    </style>

    <style name="Theme.DialogApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>

    <style name="Theme.DialogApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>